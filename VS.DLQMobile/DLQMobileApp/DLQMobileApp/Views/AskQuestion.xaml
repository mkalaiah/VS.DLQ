<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DLQMobileApp.Views.AskQuestion"
             Title="Question"
             BackgroundImage="OceanBackground.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please enter the question:"
                HorizontalOptions="CenterAndExpand" Margin="20" TextColor="White" FontSize="20"/>
            <Editor x:Name="QuestionFeild" WidthRequest="150" BackgroundColor="White" FontSize="20"
                    HeightRequest="100" TextColor="Black" IsSpellCheckEnabled="True" Margin="20,0,20,20"/>
            <Button HorizontalOptions="CenterAndExpand" Text="Submit" TextColor="White" Clicked="OnSubmitClicked"
                    FontSize="20" Margin="20,0,20,20" BackgroundColor="DodgerBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>