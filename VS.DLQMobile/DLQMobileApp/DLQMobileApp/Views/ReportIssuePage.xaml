<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DLQMobileApp.Views.ReportIssuePage"
             Title="Report Issue"
             BackgroundImage="OceanBackground.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Report An Issue"
                HorizontalOptions="CenterAndExpand" Margin="20" TextColor="White" FontSize="20"/>
            <Entry Placeholder="Issue Type" Margin="20,0,20,20" WidthRequest="150" TextColor="Black" BackgroundColor="White" FontSize="20"/>
            <Editor x:Name="DescriptionField" HeightRequest="100" Margin="20,0,20,20" WidthRequest="150" TextColor="Black" BackgroundColor="White" FontSize="20" />
            <Button HorizontalOptions="CenterAndExpand" Text="Submit" TextColor="White" Clicked="OnSubmitClicked"
                    FontSize="20" Margin="20,0,20,20" BackgroundColor="DodgerBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>