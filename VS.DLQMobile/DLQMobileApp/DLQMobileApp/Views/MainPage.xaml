             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>

        <Grid
                RowSpacing="0"
                ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Aspect="Fill"
                Source="HomeHeader.png">
            </Image>
            <Grid
                Grid.Row="1"
                RowSpacing="0"
                ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
