                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image  
                Grid.Row="0"
                Grid.Column="0"
                Aspect="Fill"
                x:Name="FishTrip"
                Source="FishingTrip.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                        Tapped="OnFishingTripTap"
                        NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image  
                Grid.Row="0"
                Grid.Column="1"
                Aspect="Fill"
                x:Name="Engagement"
                Source="Engagement.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                        Tapped="OnEngagementTap"
                        NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image  
                Grid.Row="1"
                Grid.Column="0"
                Aspect="Fill"
                x:Name="UsefulInfo"
                Source="UsefulInfo.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                        Tapped="OnUsefulInfoTap"
                        NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image  
                Grid.Row="1"
                Grid.Column="1"
                Aspect="Fill"
                x:Name="Gallery"
                Source="Gallery.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                        Tapped="OnGalleryTap"
                        NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image  
                Grid.Row="2"
                Grid.Column="0"
                Aspect="Fill"
                x:Name="Business"
                Source="eBusiness.png">
                </Image>
                <Image  
                Grid.Row="2"
                Grid.Column="1"
                Aspect="Fill"
                x:Name="favourites"
                Source="favourites.png">
                </Image>
            </Grid>
